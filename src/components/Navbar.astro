---
import IconLinkedin from "@assets/icons/linkedin-white.astro";
import IconCV from "@assets/icons/curriculum.astro";
const MENU_LINKS = [
  {
    Icon: IconLinkedin,
    url: "https://www.linkedin.com/in/codeamus/",
  },
  {
    Icon: IconCV,
    url: "/assets/cv_alexander.pdf",
  },
];

import Logo from "@assets/img/logos/logo.webp";
import { Image } from "astro:assets";
---

<nav
  class="flex flex-row items-center justify-between px-10 py-7 md:px-20 xl:px-72"
>
  <a
    class="text-xs font-bold text-[#fff]"
    href="/"
    aria-label="Link a la página principal del portafolio"
  >
    <img
      class="w-full max-w-[120px] transition-all duration-300 hover:scale-105"
      src={Logo.src}
      alt="Logo de mi marca personal Codeamus"
    />
  </a>
  <ul class="flex flex-row items-center gap-2">
    {
      MENU_LINKS.map(({ Icon, url }) => (
        <li>
          <a
            class="flex cursor-pointer items-center gap-2 rounded-md p-2 text-xs uppercase text-[#fff] transition-all duration-300 hover:bg-[#7477FF]"
            rel="noopener noreferrer"
            aria-label="Link a la página principal del portafolio"
            href={url}
            target="_blank"
          >
            <Icon className="size-6" color="#fff" />
          </a>
        </li>
      ))
    }
  </ul>
</nav>
